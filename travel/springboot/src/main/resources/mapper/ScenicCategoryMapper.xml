<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot.mapper.ScenicCategoryMapper">

    <select id="selectPage" resultType="com.example.springboot.entity.ScenicCategory">
        SELECT * FROM `scenic_category`
        <where>
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
        </where>
        ORDER BY sort_order ASC
        LIMIT #{offset}, #{size}
    </select>

    <select id="count" resultType="java.lang.Long">
        SELECT COUNT(*) FROM `scenic_category`
        <where>
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
        </where>
    </select>

</mapper>